<div class="datetime-wrapper">
  <div id="time"></div>
  <div id="date"></div>
  <div class="country-block">
    {%- if city is not empty -%}
      <span>Time in {{ city }}</span>
    {%- endif -%}
    {%- if (city is not empty) and (country is not empty) -%}
      <span>, </span>
    {%- endif -%}
    <span>{{ country }}</span>
  </div>
  <div></div>
  <div>{{ dateformat }}</div>
</div>